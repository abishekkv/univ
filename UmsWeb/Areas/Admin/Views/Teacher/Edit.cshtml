@model Teacher
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    h1{
        color:darkblue;;
    }
    .btn {
        border-radius:25px;
        width: 200px;
        height: 50px;
        text-align:center;
        transition-duration:0.4s;

    }
    .btn:hover{
        background-color:skyblue;
        color:white;
    }
    .form-control{
        border-radius:25px;
        background-color:skyblue;
    }
    body{
        background-color:lightskyblue;
         border-bottom:2px solid darkblue;
    }
    .text-primary{
        color:darkblue;
    }
</style>

<h2>Edit Instructor </h2>
<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pt-2">
            <h2 class="text-primary">Add Faculty</h2>
            <hr>
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Address"></label>
            <input asp-for="Address" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Email"></label>
            <input asp-for="Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Phone"></label>
            <input asp-for="Phone" />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="DOB"></label>
            <input asp-for="DOB" />
            <span asp-validation-for="DOB" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="DOJ"></label>
            <input asp-for="DOJ" />
            <span asp-validation-for="DOJ" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Department.Name"></label>
            <input asp-for="Department.Name" required readonly class="from-control" \>
            <span asp-validation-for="Department.Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Course.Name"></label>
            <input asp-for="Course.Name" required readonly class="from-control" \>
            <span asp-validation-for="Course.Name" class="text-danger"></span>
        </div>
        <button tye="submit" class="btn btn-primary">Update</button>
        <a asp-area="Admin" asp-controller="Teacher" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to List
        </a>
    </div>
</form>

