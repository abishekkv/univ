@model UmsWeb.Models.ViewModels.FeesVM
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    h1{
        color:darkblue;;
    }
    .btn {
        border-radius:25px;
        width: 200px;
        height: 50px;
        text-align:center;
        transition-duration:0.4s;

    }
    .btn:hover{
        background-color:skyblue;
        color:white;
    }
    .form-control{
        border-radius:25px;
        background-color:skyblue;
    }
    body{
        background-color:lightskyblue;
         border-bottom:2px solid darkblue;
    }
    .text-primary{
        color:darkblue;
    }
</style>

<h1>Add Fee Structure</h1>

@*create new courses*@
<form method="post">
    <input asp-for="fee.Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pt-2">
            <h2 class="text-primary">Add Faculty</h2>
            <hr>
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="fee.CourseId"></label>
            <select asp-for="fee.CourseId" asp-items="@Model.courseList" class="from-control">
             <option disabled selected>--Select Category--</option>
             </select>
            <span asp-validation-for="fee.CourseId" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="fee.Course"></label>
            <input type="text" asp-for="fee.CourseFee" class=form-control />
            <span asp-validation-for="fee.CourseFee" class="text-danger" style="border-radius:5px"></span>
        </div>
        <button tye="submit" class="btn btn-primary">Create</button>
        <a asp-area="Admin" asp-controller="Fees" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to List
        </a>
    </div>
</form>
@section scripts{
    <partial name="_validationScriptsPartial.cshtml" />
}


